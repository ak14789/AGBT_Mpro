{
    "name": "classification_10_None",
    "n_gpu": 1,

    "downstream_model": {
        "type": "ClassificationModel",
        "args": {}
    },
    "data_loader": {
        "type": "MproDataLoader",
        "args":{
            "data_dir": "data/",
            "use_classification": true,
            "splitter": 10,
            "train_rate": 0.8,
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy", "recall", "precision", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "data/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 15,

        "tensorboard": true
    }
}
